<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.icode.electionbeater">
    package="de.hdodenhof.circleimageview">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.activities.ViewCandidates">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.activities.SliderView" />
        <activity android:name=".Activities.activities.AdminPanel" />
        <activity android:name=".Activities.activities.SplashScreenActivity" />
        <activity android:name=".Activities.activities.App_Info" />
        <activity android:name=".Activities.activities.App_Info_Admin" />
        <activity android:name=".Activities.activities.ManageAccount" />
        <activity android:name=".Activities.activities.LoginActivity" />
        <activity android:name=".Activities.activities.RegisterCandidateActivity" />
        <activity android:name=".Activities.activities.RegistrationActivity" />
        <activity android:name=".Activities.activities.ViewResults" />
        <activity android:name=".Activities.activities.AdminLoginActivity" />
        <activity android:name=".Activities.activities.CastVoteActivity" />
        <activity android:name=".Activities.activities.ManageElection" />
        <activity android:name=".Activities.activities.PortfolioCategories" />
        <activity android:name=".Activities.activities.DeleteCandidate"></activity>
    </application>

</manifest>